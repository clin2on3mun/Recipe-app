<h1 class=" text-center text-4xl">Food</h1>
   <div class="flex justify-center py-3">
   <div class='w-1/2'>
    <%= link_to "Add food", '/foods/new', class: "inline-block float-right 
 p-2  mb-1 bg-blue-500 text-white px-4 py-2 rounded-3xl cursor-pointer hover:bg-blue-400"%>
     <table class = "table">
        <thead>
        <tr>
            <th class='p-3'>Food</th>
            <th class='p-3'>measurement unit</th>
            <th class='p-3'>Unit price</th>
            <th class='p-3'>Action</th>
        </tr>
        </thead>
        <tbody>
    <% unless @foods.empty?%>
    
      <% @foods.each do|food| %>
        <tr>
            <td class="p-2"><%= food.name%></td>
            <td class="p-2"><%= food.measurement_unit%></td>
            <td class="p-2">$<%= food.price%></td>
            <td class="p-2"><%= button_to 'Delete', food_path(id: food.id), method: :delete,  class: 'border px-3 py-1 text-white bg-red-500 rounded-lg hover:scale-105 transition-all float-right' %></td>
            </tr>
       <%end%>  
        <% else %>
      <tr>
        <td colspan="4">No food items available.</td>
      </tr>
    <% end %>
    </tbody>   
    </table>
</div>