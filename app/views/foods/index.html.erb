<div>
    <%= link_to "Add food", '/foods/new', class: "inline-block float-right 
 p-2  mb-1 bg-blue-500 text-white px-4 py-2 rounded-3xl cursor-pointer hover:bg-blue-400"%>
     <table class = "table">
        <thead>
        <tr>
            <th>Food</th>
            <th>measurement unit</th>
            <th>Unit price</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
    <% unless @foods.empty?%>
    
      <% @foods.each do|food| %>
        <tr>
            <td><%= food.name%></td>
            <td><%= food.measurement_unit%></td>
            <td>$<%= food.price%></td>
            <td><%= button_to 'Delete', food_path(id: food.id), method: :delete %></td>
            </tr>
       <%end%>  
        <% else %>
      <tr>
        <td colspan="4">No food items available.</td>
      </tr>
    <% end %>
    </tbody>   
    </table>
</div>