<h1 class="mt-12 text-center text-4xl"> My Recipes </h1>
<div class="flex flex-col gap-2 items-center bg-primary p-6">
  <% if @recipes.empty?%>
    <h2 class="mb-5">You don't have recipes yet</h2>
  <% else%>
    <% @recipes.each do |rec| %>
        <%= render "shared/recipe_card", recipe: rec %>
    <% end %>
  <% end %>