<h1 class="text-center text-4xl"> My Recipes </h1>
<div class="flex flex-col flex-wrap gap-2 items-center bg-primary p-6">
  <% if @recipes.empty?%>
    <h2 class="mb-5">You don't have recipes yet</h2>
  <% else%>
    <% @recipes.each do |rec| %>
        <%= render "shared/recipe_card", recipe: rec %>
    <% end %>
  <% end %>
  <%= link_to "Add Recipe", new_recipe_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-3xl cursor-pointer hover:bg-blue-400'%>