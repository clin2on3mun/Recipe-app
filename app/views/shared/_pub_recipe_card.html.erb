<div class="border w-1/2 border-current rounded-3xl p-6 m-5 bg-gray-50">
    <div class="flex justify-between">
      <div class="text-xl font-bold text-gray-900 mb-2">
        <h3 class='text-2xl hover:scale-105 hover:opacity-50'>
          <%= link_to recipe.name, recipe_path(id: recipe.id) %>
        </h3>
        <h5 class="text-base text-zinc-600 font-regular">By: <%= recipe.user.name %>
        </h5>
      </div>
      <div>
        <h5 class="mt-3" style="margin-right: 20px">Total foods: <%= recipe.recipe_foods.length %> </h5>
        <% sum = 0 %>
        <h5 style="margin-right: 120px">Total price : $ <% recipe.recipe_foods.each do |food| %>
            <% sum += food.food.price %>
          <% end %>
          <%= sum %></h5>
      </div>
    </div>
    <div class="">
      <div class="col-span-12 sm:col-span-8">
        <span class='text-base text-zinc-600 font-regular'>Description:</span>
        <p class="card-text">
          <%= recipe.description %>
        </p>
      </div>
      <div class="d-flex justify-content-end">
        <p class="opacity-50 text-right"><%= time_ago_in_words(recipe[:created_at]) %></p>
      </div>
    </div>
  </div>
